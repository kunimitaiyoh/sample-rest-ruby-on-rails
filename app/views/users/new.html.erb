<%= form_for @user, url: users_path do |f| %>
  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :mail %><br>
    <%= f.text_field :mail %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field  :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field  :password_confirmation %>
  </p>

  <%= f.submit %>
<% end %>